<link rel="stylesheet" href="/css/planes.css">

<div id="container" class="container" style="display:none">
    <h1>Elige tu plan</h1>
    <p class="subtitulo">Selecciona el plan que mejor se adapte a ti.</p>

    <div class="planes">
      <button class="plan" data-plan="gratis">
        <h2>Gratis</h2>
        <p>1 resumen por mes</p>
        <p class="precio">$0.00 USD</p>
      </button>

      <button class="plan" data-plan="premium">
        <h2>Premium</h2>
        <p>100 resumenes por mes</p>
        <p class="precio">$1.00 USD</p>
      </button>
    </div>

    <button id="continuar" class="boton-continuar" disabled>Elegir</button>
</div>

<script type="module" src="/js/planes.js"></script>